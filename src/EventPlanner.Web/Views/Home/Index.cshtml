@using System.Globalization
@model IEnumerable<EventPlanner.Web.Models.EventVm>?  

@{
    ViewData["Title"] = "Home";
}

<section class="py-5 text-center">
    <h1 class="display-4 fw-bold">Event Planner</h1>
    <p class="lead text-muted mt-3">
        Plan and book events easily — conferences, meetups, workshops.
    </p>
    <div class="mt-4">
        <a asp-controller="Event" asp-action="Index" class="btn btn-primary btn-lg">
            Browse events
        </a>
    </div>
</section>

@if (Model?.Any() == true)
{
    <section class="py-4">
        <h2 class="h4 mb-3">Upcoming events</h2>
        <div class="row g-3">
            @foreach (var e in Model.Take(4))
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-2">@e.Title</h5>
                            <div class="text-muted small mb-2">
                                @e.StartAtUtc.ToLocalTime().ToString("MMMM d, yyyy • HH:mm", CultureInfo.InvariantCulture)
                            </div>
                            @if (!string.IsNullOrWhiteSpace(e.Title))
                            {
                                <div class="text-muted small mb-3">@e.Title</div>
                            }
                            <a asp-controller="Event" asp-action="Index" asp-route-id="@e.Id" class="btn btn-outline-primary btn-sm">
                                View details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="mt-3">
            <a asp-controller="Event" asp-action="Index" class="btn btn-link">See all events →</a>
        </div>
    </section>
}