@model List<EventPlanner.Web.Models.TicketBookVm>

@{
    ViewData["Title"] = "Book tickets";
}

<h2 class="mb-4">Book tickets</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No tickets available for this event.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var ticket in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@ticket.EventTitle</h5>
                        <p class="card-text text-muted">@ticket.EventDescription</p>
                        <ul class="list-unstyled small mb-3">
                            <li><strong>Start:</strong> @ticket.EventStartAtUtc</li>
                            <li><strong>Location:</strong> @ticket.EventLocation, @ticket.LocationAddress</li>
                        </ul>

                        <h6 class="mt-3">Ticket</h6>
                        <p>
                            <span class="badge bg-secondary">@ticket.TicketType</span>
                            <span class="ms-2">@ticket.Price.ToString("C")</span>
                        </p>

                        <form asp-controller="Booking" asp-action="Create" method="post">
                            <input type="hidden" name="TicketId" value="@ticket.TicketId" />
                            <button type="submit" class="btn btn-primary">Book</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}