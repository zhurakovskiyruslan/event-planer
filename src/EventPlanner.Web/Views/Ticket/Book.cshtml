@model EventPlanner.Web.Models.UpsertTicketVm
@{
    ViewData["Title"] = "Book ticket";
}

<h1 class="display-6 fw-semibold mb-4">Book ticket</h1>

<form asp-action="Book" method="post" class="card border-0 shadow-sm" style="max-width:560px;">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EventId"/>

    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">Ticket type</label>
            <div class="d-flex gap-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Type" id="typeStd" value="Standard"
                           @(Model.Type?.Equals("Standard", StringComparison.OrdinalIgnoreCase) == true ? "checked" : "")>
                    <label class="form-check-label" for="typeStd">Standard</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Type" id="typeVip" value="VIP"
                           @(Model.Type?.Equals("VIP", StringComparison.OrdinalIgnoreCase) == true ? "checked" : "")>
                    <label class="form-check-label" for="typeVip">VIP</label>
                </div>
            </div>
        </div>

        <div class="mb-4" style="max-width:240px;">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>

        <div class="d-flex gap-2">
            <a asp-controller="Event" asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Confirm</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}