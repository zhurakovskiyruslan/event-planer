@model EventPlanner.Web.Models.UserVm

@{
    ViewData["Title"] = "Find User";

    var qId = Context.Request.Query["id"].FirstOrDefault();
    var qEmail = Context.Request.Query["email"].FirstOrDefault();
    bool anySearch = !string.IsNullOrWhiteSpace(qId) || !string.IsNullOrWhiteSpace(qEmail);
}

<h2 class="mb-3">Find User</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div></div>
    <div>
        <a asp-action="Create" class="btn btn-success">+ Add User</a>
    </div>
</div>

<div class="row g-3 mb-4">
    <!-- Поиск по ID -->
    <div class="col-12 col-md-6">
        <form asp-action="Index" method="get" class="row g-2">
            <div class="col-8">
                <input name="id" type="number" class="form-control" placeholder="User Id"
                       value="@qId" min="1" />
            </div>
            <div class="col-4 d-grid">
                <button class="btn btn-primary">Search by Id</button>
            </div>
        </form>
    </div>

    <!-- Поиск по Email -->
    <div class="col-12 col-md-6">
        <form asp-action="Index" method="get" class="row g-2">
            <div class="col-8">
                <input name="email" type="email" class="form-control" placeholder="user@example.com"
                       value="@qEmail" />
            </div>
            <div class="col-4 d-grid">
                <button class="btn btn-secondary">Search by Email</button>
            </div>
        </form>
    </div>
</div>

@if (Model is not null)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">User #@Model.Id</h5>
            <p class="card-text mb-1"><strong>Name:</strong> @Model.Name</p>
            <p class="card-text mb-1"><strong>Email:</strong> @Model.Email</p>

            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline">
                @Html.AntiForgeryToken()
                <button class="btn btn-sm btn-danger ms-2"
                        onclick="return confirm('Delete this user?');">
                    Delete
                </button>
            </form>
        </div>
    </div>
}
else if (anySearch)
{
    <div class="alert alert-warning">User not found.</div>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-link">Back</a>
</div>