@model IReadOnlyList<EventPlanner.Web.Models.UserVm>

@{
    ViewData["Title"] = "Users";
    var hasItems = Model != null && Model.Any();
}

<h2 class="mb-4">Users</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <form asp-action="Index" method="get" class="d-flex gap-2">
        <input name="q" class="form-control" placeholder="Search by email" 
               value="@(Context.Request.Query["q"])" />
        <button class="btn btn-outline-secondary">Search</button>
        <a asp-action="Index" class="btn btn-link">Reset</a>
    </form>

    <a asp-action="Create" class="btn btn-success">+ Add User</a>
</div>

@if (!hasItems)
{
    <div class="alert alert-light border">No users to display.</div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr class="small text-uppercase text-muted">
                        <th style="width: 80px;">Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th style="width: 160px;" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.Name</td>
                        <td>@u.Email</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-primary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@u.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Delete user @u.Email ?');">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-sm btn-danger ms-1">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}