@model EventPlanner.Web.Models.UserVm

@{
    ViewData["Title"] = "Profile";
}

<h1 class="display-5 fw-semibold mb-4">Profile</h1>

<div class="card border-0 shadow-sm" style="max-width: 500px;">
    <div class="card-body">
        <h4 class="mb-2">@Model.Name</h4>
        <div class="text-muted mb-3">@Model.Email</div>

        <div class="d-grid gap-2">
            <a asp-controller="Auth" asp-action="ChangePassword" class="btn btn-outline-secondary">
                Change password
            </a>
            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-grid">
                <button type="submit" class="btn btn-outline-secondary">
                    Sign out
                </button>
            </form>
        </div>
    </div>
</div>