@model EventPlanner.Web.Models.UpsertBookingVm

@{
    ViewData["Title"] = "Create Booking";
}

<h2 class="mb-4">Create Booking</h2>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-4">
        <label asp-for="UserId" class="form-label"></label>
        <input asp-for="UserId" type="number" min="1" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="TicketId" class="form-label"></label>
        <input asp-for="TicketId" type="number" min="1" class="form-control" />
        <span asp-validation-for="TicketId" class="text-danger"></span>
    </div>

    <div class="col-12">
        
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-link">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}