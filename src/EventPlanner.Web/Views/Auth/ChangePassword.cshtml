@model ChangePasswordVm

@{
    ViewData["Title"] = "Change Password";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">

                    <h2 class="h4 mb-3">Change Password</h2>
                    <p class="text-muted mb-4">Enter your current password and the new one twice.</p>

                    @* General form errors *@
                    <div class="mb-3">
                        @Html.ValidationSummary(excludePropertyErrors: true, "", new { @class = "alert alert-danger py-2 mb-0" })
                    </div>

                    <form asp-action="ChangePassword" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label">Current password</label>
                            <input asp-for="OldPassword" class="form-control" type="password"
                                   placeholder="Enter current password"
                                   autocomplete="current-password" />
                            <span asp-validation-for="OldPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">New password</label>
                            <input asp-for="NewPassword" class="form-control" type="password"
                                   placeholder="Enter new password"
                                   autocomplete="new-password" />
                            <div class="form-text">
                                Minimum 6â€“8 characters (exact rules depend on Identity settings).
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm new password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password"
                                   placeholder="Repeat new password"
                                   autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="submitBtn" type="submit" class="btn btn-primary btn-lg">
                                Change Password
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-light">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>